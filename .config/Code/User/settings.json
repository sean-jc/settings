// Place your settings in this file to overwrite the default settings
{
    // Controls the font family.
    "editor.fontFamily": "'Droid Sans Mono', Consolas, 'Courier New', monospace",

    // Controls the font size.
	"editor.fontSize": 13,
    "editor.tabSize": 4,

    // The default end of line character.
    "files.eol": "\n",

    // Missing semicolon.
	"javascript.validate.lint.missingSemicolon": "ignore",
    
	// Semicolon instead of block.
	"javascript.validate.lint.semicolonsInsteadOfBlocks": "ignore",
    
    // Function inside loop.
	"javascript.validate.lint.functionsInsideLoops": "ignore",

    "files.exclude": {
        "**/.vscode":true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/*.a": true,
        "**/*.o": true,
        "**/*.so": true
    },
    "files.watcherExclude": {
        "**/.vscode":true,
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/*.a": true,
        "**/*.o": true,
        "**/*.so": true,
        "**/vendor": true
    },
    "search.exclude": {
        "**/.vscode":true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.a": true,
        "**/*.o": true,
        "**/*.so": true,
        "**/vendor": true
    },
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Monokai Dark Soda",
    "[cpp]": {
            "editor.quickSuggestions": false
    },
    "[c]": {
            "editor.quickSuggestions": false
    }
}