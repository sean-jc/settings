#!/bin/bash
shopt -s extglob

opts="--nogit --nogit-fallback --norolestats --nom"
if [[ $2 == "kvm" ]]; then
    opts="$opts --pattern-depth=1"
fi

if [[ $2 == "ku" ]]; then
    maint="kvm@vger.kernel.org,"
elif [[ $(basename $1) =~ ^$30000- ]] ; then
    maint=$(./scripts/get_maintainer.pl $opts $(dirname $1)/!($30000-cover-letter.patch) | tr '\n' ',')
else
    maint=$(./scripts/get_maintainer.pl $opts $1 | tr '\n' ',')
fi
if [[ $2 != "ku" && $2 != "qemu" ]]; then
    maint="$maint""linux-kernel@vger.kernel.org,"
fi
if [[ $(basename $1) =~ ^$30000- ]] ; then
    pfiles=$(ls -1 $(dirname $1)/!($30000-cover-letter.patch))
else
    pfiles=$1
fi

maint="$maint$(echo $pfiles | xargs cat | grep -v stable@vger.kernel.org | grep -v lkp@intel.com | grep -e Cc: -e Suggested-by -e Reported-by -e Tested-by -e Reported-and-tested-by -e Reviewed-by | cut -d ' ' -f 2- | tr '\n' ',')"
maint=${maint%,};
maint=${maint/namit@vmware.com/nadav.amit@gmail.com}
echo $maint
