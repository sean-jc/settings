#!/bin/bash
dir=$(pwd)
if [[ $# -eq 1 ]]; then
	target=$1
elif [[ $HOSTPOST == "glaptop" || $HOSTPOST == "seanjc9162524" ]]; then
	target="z"
else
	printf "Must specify the target\n"
	exit 1
fi
if [[ $HOSTPOST == "glaptop" || $HOSTPOST == "seanjc9162524" ]]; then
	dir="${dir/\/home\/seanjc/\~}"
fi
git reset --hard HEAD
ssh $target "cd $dir ; git diff --no-prefix" | patch -p0
