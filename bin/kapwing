#!/bin/bash
dir=$(pwd)
if [[ $# -eq 1 ]]; then
    target=$1
elif [[ $HOSTPOST == "glaptop" || $HOSTDISPLAY == "cloud" ]]; then
    target="w"
elif [[ $HOSTDISPLAY == "work" ]]; then
    target="c"
else
    printf "Must specify the target, no default for $HOSTNAME\n"
    exit 1
fi
if [[ $HOSTPOST == "glaptop" ]]; then
    dir="${dir/\/home\/seanjc/\~}"
fi
git reset --hard HEAD
ssh $target "cd $dir ; git diff --no-prefix" | patch -p0
