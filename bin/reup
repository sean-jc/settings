#!/bin/bash
dir=$(pwd)
if [[ $# -eq 1 ]]; then
    target=$1
elif [[ $HOSTPOST == "coffee" ]]; then
    target="meh"
elif [[ $HOSTPOST == "MOBL" ]]; then
    target="co"
else
    printf "Must specify the target, no default for $HOSTNAME\n"
    exit 1
fi
if [[ $HOSTPOST == "MOBL" ]]; then
    dir="${dir/\/c\/Users\/sjchrist/\~}"
fi
git diff --no-prefix | ssh $target "cd $dir ; git reset --hard HEAD ; patch -p0"
