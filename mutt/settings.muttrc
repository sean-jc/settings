# vim: filetype=muttrc
set copy=no
set move=no
unset record

# Scroll by line, not page
set menu_scroll

# Treat only '>' as a quote
set quote_regexp  = "^([ \t]*>)+"

set date_format   = "!%a, %b %d, %Y"
set attribution   = "On %d, %n wrote:"

set pipe_split    = yes

# Omit iso-8859-1, mutt will incorrectly interpret utf-8 emails as iso-8859-1
# and mangle response
set send_charset="us-ascii:utf-8"

my_hdr Bcc: seanjc@google.com
